# 4.多种输出形式
#include<stdio.h>    
int main() {      
    double a;        
    scanf("%lf",&a);        
    printf("%lf\n",a);//浮点数输出        
    printf("%e\n",a);//指数输出   
    printf("%a\n",a);//p计数法输出        
}       
----
# 8.单位转化
#include<stdio.h>   
int main()   
{    
    double a;   
    char b;    
    scanf("%lf  %c",&a,&b);   
    switch(b)   
    {   
        case 'b' :    
        printf("%.2lfb",a*2);    
        break;          
        case 'c'  :      
        printf("%.2lfc",a*2*8);       
        break;          
        case 'd'  :    
        printf("%.2lfd",a*2*8*2);      
        break;      
        case 'f'  :          
        printf("%.2lff",a*2*8*2*3);       
        break;        
    }         
}         
