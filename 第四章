# 2.名字输出
#include<stdio.h>        
#include<stdlib.h>        
int main()         
{         
    char ch[10]="abcEF";           
    printf("\"%s\"\n",ch);//输出双引号          
    printf("\"%20s\"\n",ch);//在宽度为20的字段右端打印      
    printf("\"%-20s\"\n",ch);//在宽度为20的字段左端打印         
   int width = strlen(ch) + 3;        
    printf("\"%-*s\"\n", width, ch);//在宽度为字符宽度加3进行打印       
}          
