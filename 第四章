# 8.燃油问题       
#include <stdio.h>              
#define GALLON_LITRE 3.785          
int main()           
{           
	const float MILE_KM = 1.609;       
	float mileage;        
	float gasoline;    
	float mile_gallon;       
	float litre_100;       
	float a,b;        
	scanf("%f",&mileage);         
	scanf("%f",&gasoline);         
	a = mileage / MILE_KM;        
	b = gasoline / GALLON_LITRE;        
	mile_gallon = a / b;          
	litre_100 = gasoline / mileage * 100;        
	
	printf("消耗每加仑汽油行驶的英里数为：%.1f英里/加仑\n",mile_gallon);       
	printf("每100公里消耗的汽油量为：%.1f升/100公里\n",litre_100);         
      
	return 0;     
}        
---
# 7.单精度和双精度   
#include<stdio.h>     
#include<float.h>    
int main()   
{   double a=1.0/3.0;   
    float b=1.0/3.0;   
    printf("%.6lf %.6f\n",a,b);   
    printf("%.12lf %.12f\n",a,b);    
    printf("%.16lf %.16f\n",a,b);     
    printf("FLT_DIG:%d\n",FLT_DIG);    
    printf("DBL_DIG:%d\n",DBL_DIG);     
}     

