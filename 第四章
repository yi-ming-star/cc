# 名字输出
#include<stdio.h>
#include<stdlib.h>
int main()
{
    char ch[10]="abcEF";
    printf("\"%s\"\n",ch);//输出双引号
    printf("\"%20s\"\n",ch);//在宽度为20的字段右端打印
    printf("\"%-20s\"\n",ch);//在宽度为20的字段左端打印
   int width = strlen(ch) + 3;
    printf("\"%-*s\"\n", width, ch);//在宽度为字符宽度加3进行打印
}
---
# 燃油问题
#include <stdio.h>      
#define GALLON_LITRE 3.785         
int main()          
{          
	const float MILE_KM = 1.609;       
	float mileage;        
	float gasoline;    
	float mile_gallon;       
	float litre_100;       
	float a,b;        
	scanf("%f",&mileage);         
	scanf("%f",&gasoline);         
	a = mileage / MILE_KM;        
	b = gasoline / GALLON_LITRE;        
	mile_gallon = a / b;          
	litre_100 = gasoline / mileage * 100;        
	
	printf("消耗每加仑汽油行驶的英里数为：%.1f英里/加仑\n",mile_gallon);       
	printf("每100公里消耗的汽油量为：%.1f升/100公里\n",litre_100);         
      
	return 0;     
}        
