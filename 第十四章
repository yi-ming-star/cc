# 5.平均分      
#include <stdio.h>        
#define CSIZE 4            
         
struct name {        
    char aname[12];        
    char bname[24];         
};      
    
struct student {    
    struct name names;        
    float grade[3];      
    float ave;      
};       
        
int main() {        
    struct student class[CSIZE] = {         
        {{"jim", "ghjk"}, {0}, 0},        
        {{"tom", "poiu"}, {0}, 0},        
        {{"kang", "fghj"}, {0}, 0},        
        {{"yu", "bnm"}, {0}, 0}       
    };        
double sum;        
    for (int i = 0; i < CSIZE; i++) {         
        for (int j = 0; j < 3; j++) {        
            scanf("%f", &class[i].grade[j]);          
            sum+=class[i].grade[j];       
        }       
        class[i].ave = sum / 3;     
        sum = 0;   
    }       
        
    for (int i = 0; i < CSIZE; i++) {         
        printf("学生姓名: %s %s\n", class[i].names.aname, class[i].names.bname);        
        printf("成绩: ");     
        for (int j = 0; j < 3; j++) {       
            printf("%.2f ", class[i].grade[j]);         
        }          
        printf("\n平均成绩: %.2f\n", class[i].ave);              
        printf("------------------------\n");          
    }         
    return 0;          
}          
