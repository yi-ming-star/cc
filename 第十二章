# 随机数排序
#include<stdio.h>
#include<stdlib.h>
#include<time.h>

void jiangxupaixu(int arr[],int n) {
    for(int i = 0;i < n-1; i++) {
        for(int j = 0; j < n-i-1 ;j++) {
            if(arr[j]<arr[j+1]) {
                int temp = arr[j];
                arr[j] = arr[j+1];
                arr[j+1] = arr[j];
            }
        }
    }
}

int main() {
    int arr[10];
    srand(time(NULL));

    for(int i = 0; i < 10 ; i++) {
        arr[i] = rand() %100 +1;
    }

    jiangxupaixu(arr,10);

    for(int i = 0; i <10 ;i++) {
        printf("%d\n",arr[i]);
    }
    printf("\n");

    return 0;
}
