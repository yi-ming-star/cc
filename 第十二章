# 函数调用次数
#include <stdio.h>
int fun1(int *count) {
    return (*count)++;
}

int main() {
    int count = 0;
    for (int i = 0; i < 5; i++) {
        int result = fun1(&count);
        printf("第 %d 次调用 fun1 函数，返回值: %d，count 的值: %d\n", i + 1, result, count);
    }
    return 0;
}
