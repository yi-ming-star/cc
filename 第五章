# 1.把分钟表示的时间转换成用小时和分钟表示的时间     
#include<stdio.h>    
#define a 60     
int main()     
{int t=1;     
    while(t>0)     
    {        
        scanf("%d",&t);          
        if(t<=0) {break;}          
        int h=t/a;         
        int m=t%a;        
        printf("%dh %dm\n",h,m);          
    }         
           
}         
---
# 9.温度单位转化
#include <stdio.h>     
void temperatures(double x);       
int main() {          
    double x;        
    while (scanf("%lf", &x) == 1) {           
        temperatures(x);        
    }         
    return 0;      
}      
            
void temperatures(double x) {           
    const double a = 5.0;             
    const double b = 9.0;        
    const double c = 32.0;         
    const double d = 273.16;         
    double celsius = a / b * (x - c);            
    double kelvin = celsius + d;          
    printf("华氏温度 = %.2lf    摄氏温度 = %.2lf    开氏温度 = %.2lf\n", x, celsius, kelvin);           
}         
