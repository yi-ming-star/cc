# 1.读取文件中的字符个数
#include<stdio.h>
#include<stdlib.h>
#define LEN 50
int main(int argc,char* argv[])
{int ch;
    FILE *fp;
    int count = 0;
    char filename[LEN];

    printf("Please enter a filename:");
    scanf("%s",filename);
    fp = fopen(filename,"r");
    if(fp == NULL) 
    {
        perror("fopen");
        return 1;
    }
    while((ch==getc(fp))!=EOF)
    {
        putc(ch,stdout);
        count++;
    }
    fclose(fp);
    printf("\nFile %s has %d charatars\n",filename,count);
    fp = NULL;
    return 0;


}
---
# 3.大写转化
#include <stdio.h>        
#include <ctype.h>     
#include <stdlib.h>      
#define LEN 50         
           
int main(int argc, char* argv[]) {             
    int ch;          
    FILE* fp;         
    char filename[LEN];         
    printf("Please enter a filename: ");            
    scanf("%s", filename);           
    fp = fopen(filename, "r+");            
    if (fp == NULL) {             
        printf("Can't open %s\n", filename);             
        exit(0);         
    }              
    while ((ch = getc(fp)) != EOF) {          
        fseek(fp, -1L, SEEK_CUR);            
        putc(toupper(ch), fp);           
    }            
    rewind(fp);         
    printf("File %s:\n", filename);      
    while ((ch = getc(fp)) != EOF) {      
        putchar(ch);       
    }        
    printf("\n");     
    fclose(fp);          
          
    return 0;        
}         
---
# 4.使用argc控制循环，按顺序列出所有文件
#include <stdio.h>     
#include <stdlib.h>      
int main(int argc, char* argv[])      
{     
    int i, temp;     
    FILE* www;      
    
    if (argc == 1) {       
        printf("Usage: %s filename[s]\n", argv[0]);            
        exit(0);         
    }          
    for (i = 1; i < argc; i++) {
        www = fopen(argv[i], "r");   
        if (www == NULL)  {    
            printf("Can't open file %s\n", argv[i]);    
            continue;   
        }    
        printf("File %s:\n", argv[i]);    
        while ((temp = getc(www)) != EOF)  {   
            putchar(temp);    
        }     
        printf("\n");    
        fclose(www);    
    }    
      
    return 0;    
}      
