# 读取文件中的字符个数
#include<stdio.h>
#include<stdlib.h>
#define LEN 50
int main(int argc,char* argv[])
{int ch;
    FILE *fp;
    int count = 0;
    char filename[LEN];

    printf("Please enter a filename:");
    scanf("%s",filename);
    fp = fopen(filename,"r");
    if(fp == NULL) 
    {
        perror("fopen");
        return 1;
    }
    while((ch==getc(fp))!=EOF)
    {
        putc(ch,stdout);
        count++;
    }
    fclose(fp);
    printf("\nFile %s has %d charatars\n",filename,count);
    fp = NULL;
    return 0;


}
