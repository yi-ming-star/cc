# 15.atoi    
#include<stdio.h>        
#include<string.h>           
int main()         
{         
    char a[] = "hdiwhwuhd123";      
    char b[] = "123456";         
    char c[] = "1235ndujhbj";            
    printf("%d %d %d",atoi(a),atoi(b),atoi(c));            
}         
